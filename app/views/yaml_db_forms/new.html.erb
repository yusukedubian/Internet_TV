<%= javascript_include_tag :defaults %>
<div class="top_title">
	<%= _("YAMLメール") %>
</div>
<div class="container" id="container">
	<h4><%= _("YAMLフォーム新規作成") %></h4>
	<div class="account" style="margin-bottom:15px;">
		<% form_tag({:action=>'create'}, {:multipart=>true}) do %>

			<%= render :partial => 'form' %>

			<table>
				<tr>
					<td>
						<%= submit_tag _("保存") %>
					</td>
					<td>
						<%= link_to _("戻る"), {:action=>'index'} %>
					</td>
					<td>
						<%= link_to _("VASDAQ.TVトップへ"), root_path %>
					</td>
				</tr>
			</table><br>
		<% end %>	
	</div>
	
	<%= render :partial => 'form_help' %>
	
	<div class="rogo">
		<%= image_tag ("./imagefile/tv.gif",:width=>"50px",:height=>"50px")%>
		<%= image_tag ("./imagefile/bottomrogo.png") %>
	</div>	
</div>

<script>
	function limitChars(target,maxlength) {
    	if ( target.value.length > maxlength ) {
			target.value = target.value.substr(0,maxlength);
    	}
	}
</script>

<style type="text/css">
div.container {list-style-type: none;margin-left:10px;margin-top:15px;}
	
div.html_item {
   border-radius: 10px;         /* CSS3 */
   -moz-border-radius: 5px;    /* Firefox */
   -webkit-border-radius: 10px; /* Safari,Chrome */

   border: 1px #ccc solid;     /* 枠線の装飾 */
   background-color: #f5f5f5;   /* 背景色 */
   width:850px;
   padding-top:15px;
   padding-bottom:15px;
   margin-left: 25px;
}	
</style>
