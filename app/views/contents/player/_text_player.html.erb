		<tr>
			<td><%= "表示タイプ"%><font color=red>*</font></td>
			<td>
					<%= radio_button_tag("contents_setting[viewtype]", "classic", false, options ={:onclick=>"viewtype('classic');"})%><%="クラシック  "%>
					<%= radio_button_tag("contents_setting[viewtype]", "billboard", true, options ={:onclick=>"viewtype('billboard');"})%><%="電光掲示板風  "%>
					<%= radio_button_tag("contents_setting[viewtype]", "clock", false, options ={:onclick=>"viewtype('clock');"})%><%="クロック"%>
			</td>
		</tr>
	</table>

