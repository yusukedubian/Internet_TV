			<tr>
				<td colspan="3">
					<%= _("本文")%><font color=red>*</font>
				</td>
			</tr>
			<tr>
				<td>
					<%= text_area_tag("contents_setting[text_content]", h(settings["text_content"]),:rows=>"10",:cols=>"100",:maxlength=>"1024")%>
