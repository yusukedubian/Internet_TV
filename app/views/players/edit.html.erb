<div style="margin-left:75px;margin-top:75px;">
	<h1>プレーヤ編集画面</h1>
	
	<% form_for(@player) do |f| %>
	  <%= f.error_messages %>
	  <table>
	  	<tr>
	  		<th></th>
	  	</tr>
		<tr>
			<td>プレーヤNo</td>
			<td>
				<%= f.text_field :player_no,:maxlength =>5 %>
			</td>
		</tr>
		<tr>
			<td>プレーヤ名</td>
			<td>
				<%= f.text_field :name,:maxlength =>40 %>
			</td>
		</tr>
		<tr>
			<td>ガイドメッセージ</td>
			<td>
				<%= f.text_area :guide_text,:maxlength =>400 %>
			</td>
		</tr>
		<tr>
			<td>クラス名</td>
			<td>
				<%= f.text_field :playerclass,:maxlength =>40 %>
			</td>
		</tr>
		<tr>
			<td>erb名</td>
			<td>
				<%= f.text_field :playerview,:maxlength =>40 %>
			</td>
		</tr>
		<tr>
			<td>runtime get</td>
			<td>
				<%= f.text_field :runtime_get_type,:maxlength =>40 %>
			</td>
		</tr>
		<tr>
			<td>runtime create</td>
			<td>
				<%= f.text_field :runtime_create_type,:maxlength =>40 %>
			</td>
		</tr>
		<tr>
			<td>runtime config</td>
			<td>
				<%= f.text_field :runtime_config_table,:maxlength =>40 %>
			</td>
		</tr>
		<tr>
			<td>ロゴ画像</td>
			<td>
				<%= f.text_field :logo_img,:maxlength =>40 %>
			</td>
		</tr>
		<tr>
			<td>タイトル画像</td>
			<td>
				<%= f.text_field :title_img,:maxlength =>40 %>
			</td>
		</tr>
		<tr>
			<td>削除フラグ</td>
			<td>
				<%= f.check_box :del_flg %>
			</td>
		</tr>
	  </table>
	  <p>
	    <%= f.submit "更新" %>
	  </p>
	<% end %>
	<%= link_to '表示', @player %> |
	<%= link_to '戻る', players_path %>
	<br><br>
	<%= link_to '削除', @player, :method => :delete, :confirm=>"削除してもよろしいですか？（元に戻せません）"%>
</div>